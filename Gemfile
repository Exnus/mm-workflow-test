# If you do not have OpenSSL installed, change
# the following line to use 'http://'
source 'https://rubygems.org'

# For faster file watcher updates on Windows:
gem 'wdm', '~> 0.1.0', platforms: [:mswin, :mingw]

# Windows does not come with time zone data
gem 'tzinfo-data', platforms: [:mswin, :mingw, :jruby]

gem 'sprockets', '~> 3.0'

# Middleman Gems
gem 'middleman', '>= 4.0.0'
gem 'middleman-livereload'
gem 'middleman-compass', '>= 4.0.0'
gem 'middleman-blog'
gem 'contentful_middleman', :git => 'https://github.com/contentful/contentful_middleman.git', :ref => '2e8a831a807e0ae4fc19bf2178e8d183e41321e0'
gem 'contentful-middleman-pages', :git => 'https://github.com/contentful/contentful-middleman-pages.git'
